# RAG Email System - Environment Variables
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# Email Configuration
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_app_password_here
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Odoo Database Configuration
ODOO_DB_HOST=localhost
ODOO_DB_PORT=5432
ODOO_DB_NAME=odoo_db
ODOO_DB_USER=odoo_user
ODOO_DB_PASSWORD=your_db_password_here

# Claude API
CLAUDE_API_KEY=your_claude_api_key_here

# Poppler PDF to Image Converter
POPPLER_PATH=C:\Anas's PC\Moaz\New Automation\poppler-24.08.0\Library\bin

# OpenAI API (for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant (if using instead of FAISS)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Environment
ENVIRONMENT=development

# Admin Notifications
ADMIN_EMAIL=admin@example.com

# Email Notifications (Enhanced Logging)
# Set to 'true' to receive detailed email notifications for each processed email
ENABLE_EMAIL_NOTIFICATIONS=true
# Email address to receive processing notifications (defaults to ADMIN_EMAIL)
NOTIFICATION_EMAIL=admin@example.com

# OCR and PDF Processing (Optional)
# Leave blank to auto-detect from system PATH
TESSERACT_CMD=
POPPLER_PATH=

# Product Matching Configuration (Multi-Level Strategy)
PRODUCT_CODE_EXACT_THRESHOLD=1.0
PRODUCT_CODE_FUZZY_THRESHOLD=0.90
PRODUCT_ATTRIBUTE_THRESHOLD=0.80
PRODUCT_NAME_THRESHOLD=0.85
PRODUCT_AUTO_APPROVE_THRESHOLD=0.95
PRODUCT_REVIEW_THRESHOLD=0.70

# Telegram Bot Configuration
# Create bot via @BotFather on Telegram, then get your chat ID from @userinfobot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLE_NOTIFICATIONS=true

# Feedback System for DSPy Improvement
FEEDBACK_DB_PATH=feedback/
FEEDBACK_ENABLE_AUTO_TRAINING=false
FEEDBACK_CONFIDENCE_THRESHOLD=0.8
DSPY_AUTO_RETRAIN_THRESHOLD=10

# Immediate Retraining & Validation (Test feedback effectiveness instantly)
# Set to 'true' to retrain DSPy model immediately after each feedback and validate
FEEDBACK_IMMEDIATE_RETRAIN=true
