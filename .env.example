# =============================================================================
# RAG Email System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your credentials
# Never commit .env to git (already in .gitignore)

# =============================================================================
# MISTRAL AI API (Required)
# =============================================================================
# Get your API key from: https://console.mistral.ai/
# Used for: Entity extraction & intent classification
# Cost: ~$0.002 per email
MISTRAL_API_KEY=your_mistral_api_key_here

# =============================================================================
# EMAIL CONFIGURATION (Required)
# =============================================================================
# Email account to monitor for incoming orders
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_app_specific_password

# IMAP Server Settings
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# For Gmail: Use App Password (not main password)
# https://support.google.com/accounts/answer/185833

# =============================================================================
# ODOO CONFIGURATION (Required)
# =============================================================================
# Your Odoo instance details
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_database_name
ODOO_USERNAME=your_odoo_username
ODOO_PASSWORD=your_odoo_password

# =============================================================================
# FEATURE TOGGLES (Optional)
# =============================================================================
# Enable DSPy for entity extraction (recommended: true)
USE_DSPY=true

# Enable BERT for semantic matching (recommended: true)
USE_BERT=true

# Auto-create orders in Odoo (set false for testing)
ENABLE_ORDER_CREATION=false

# =============================================================================
# ADVANCED SETTINGS (Optional)
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# BERT device: cuda, cpu, or auto (auto-detect)
BERT_DEVICE=auto

# Mistral timeout in seconds
MISTRAL_TIMEOUT=60
